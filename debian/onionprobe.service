[Unit]
Description=Onionprobe
Documentation=file:///usr/share/doc/onionprobe/README.Debian https://gitlab.torproject.org/tpo/onion-services/onionprobe
After=network.target

[Service]
EnvironmentFile=/etc/default/onionprobe
ExecStart=/usr/bin/onionprobe -c $CONFIG $DAEMON_OPTS
User=_onionprobe
Group=_onionprobe
PrivateTmp=yes
InaccessibleDirectories=/home
CapabilityBoundingSet=
DeviceAllow=/dev/null rw

[Install]
WantedBy=multi-user.target
